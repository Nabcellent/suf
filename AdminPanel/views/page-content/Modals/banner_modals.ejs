
<!--&&&===    CREATE/UPDATE BANNER    ===&&&-->

<div class="modal fade" id="add_banner_modal">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content text-info overflow-auto">
            <form id="slide_form" enctype="multipart/form-data">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close text-info" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="slide_name">Title</label>
                        <input type="text" class="form-control" name="title" placeholder="Banner title" aria-label required>
                    </div>
                    <div class="form-group">
                        <label> Banner Image</label>
                        <div class="input-group my-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input form-control" id="slide_image" name="slide_image" aria-describedby="inputGroupFileAddon">
                                <label class="custom-file-label" for="slide_image">Choose an Image</label>
                            </div>
                        </div>
                        <img src="" alt="" class="img-fluid product_img1" style="width: 7rem">
                    </div>
                    <div class="form-row">
                        <div class="form-group col">
                            <label for="slide_name">Link</label>
                            <input type="text" class="form-control" name="link" placeholder="Banner link" aria-label required>
                        </div>
                        <div class="form-group col">
                            <label for="slide_name">Alternate Text</label>
                            <input type="text" class="form-control" name="alt" placeholder="Banner alt" aria-label required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" id="description" name="description" class="form-control" placeholder="Enter banner description">
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="slide_id" name="slide_id">
                    <button type="button" class="btn btn-outline-info" data-dismiss="modal">Cancel</button>
                    <button type="submit" name="slide_crud" class="btn btn-info submit"></button>
                    <img class="d-none loader_gif" src="/images/loaders/Gear-0.2s-200px.gif" alt="loader.gif">
                </div>
            </form>
        </div>
    </div>
</div>
